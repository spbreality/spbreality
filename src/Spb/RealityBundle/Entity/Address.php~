<?php

namespace Spb\RealityBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Spb\RealityBundle\Entity\Address
 *
 * @ORM\Table(name="t03_address")
 * @ORM\Entity
 */
class Address
{
    /**
     * @var integer $id
     *
     * @ORM\Column(name="c03_id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var string $name
     *
     * @ORM\Column(name="c03_name", type="string", length=128)
     */
    private $name;


    /**
     * @ORM\ManyToOne(targetEntity="District", inversedBy="addresses")
     * @ORM\JoinColumn(name="c03_district_id", referencedColumnName="c02_id")
     */
    protected $district;
    
    /**
     * @ORM\OneToMany(targetEntity="Flat", mappedBy="address")
     */
    protected $flats;

    public function __construct()
    {
        $this->flats = new ArrayCollection();
    }       
    
    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set name
     *
     * @param string $name
     */
    public function setName($name)
    {
        $this->name = $name;
    }

    /**
     * Get name
     *
     * @return string 
     */
    public function getName()
    {
        return $this->name;
    }

    /**
     * Set district
     *
     * @param Spb\RealityBundle\Entity\District $district
     */
    public function setDistrict(\Spb\RealityBundle\Entity\District $district)
    {
        $this->district = $district;
    }

    /**
     * Get district
     *
     * @return Spb\RealityBundle\Entity\District 
     */
    public function getDistrict()
    {
        return $this->district;
    }

    /**
     * Add flats
     *
     * @param Spb\RealityBundle\Entity\Flat $flats
     */
    public function addFlat(\Spb\RealityBundle\Entity\Flat $flats)
    {
        $this->flats[] = $flats;
    }

    /**
     * Get flats
     *
     * @return Doctrine\Common\Collections\Collection 
     */
    public function getFlats()
    {
        return $this->flats;
    }
}