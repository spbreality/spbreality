{% extends 'SpbRealityBundle:Realty:index.html.twig' %}

{% block rtype_ru_pl_camel %}Участки{% endblock %}

{% block rtypeblock %}

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>№</th>
            <th>Тип</th>
            <th>Район</th>
            <th>Адрес</th>
            <th><abbr title="Размер участка в сотках">Уч. сот</abbr></th>
            <th><abbr title="Тип собственности">ИЖС/САД</abbr></th>
            <th>Цена</th>
            <th>Доп.сведения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_realty_show', { 'rtype': entity.realtytype, 'id': entity.id }) }}" title="Номер объекта">{{ entity.id }}</a></td>            
            <td><abbr title="{{ entity.operation }}"  class="initialism">{{ entity.operation.abbr }}</abbr></td>
            <td>{{ entity.district }}</td>
            <td>{{ entity.address }}</td>          
            <td>{{ entity.sm100 }}</td>          
            <td><abbr title="{{ entity.propertytype.name }}" class="initialism">{{ entity.propertytype.abbr }}</abbr></td>          
            <td>{{ entity.price }}</td>            
            <td>{{ entity.sdesc }}</td>
            <td>
                <a href="{{ path('admin_realty_show', { 'rtype': entity.realtytype, 'id': entity.id }) }}" class="icon-check" title="Показать"></a> | 
                <a href="{{ path('admin_realty_edit', { 'rtype': entity.realtytype, 'id': entity.id }) }}" class="icon-edit" title="Редактировать"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<a href="{{ path('admin_realty_new', { 'rtype': "land" }) }}" > Добавить участок</a>

{% endblock %}
