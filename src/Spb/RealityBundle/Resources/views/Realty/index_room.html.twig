{% extends '::base_hero.html.twig' %}

{% block body %}

<div class="container">
    <ul class="breadcrumb">
        <li>
            <a href="#">Жилая недвижимость</a><span class="divider">/</span>
        </li>
        <li class="active">
            Комнаты
        </li>
    </ul>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>№</th>
            <th colspan="2">Тип</th>
            <th>Район</th>
            <th>Адрес</th>
            <th>К</th>
            <th>Этаж</th>
            <th>Дом</th>
            <th>жил.</th>
            <th>кух.</th>
            <th title="Санузел">С/У</th>
            <th  title="Комнат/Соседей/Съемщиков">КСС</th>            
            <th>Цена</th>
            <th>Доп.сведения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_room_show', { 'id': entity.id }) }}" title="Номер объекта">{{ entity.id }}</a></td>            
            <td><a href="#" title="{{ entity.operation }}">{{ entity.operation.abbr }}</a></td>
            <td><a href="#" title="{{ entity.buildingstage.name }}">{{ entity.buildingstage.abbr }}</a></td>            
            <td>{{ entity.district }}</td>
            <td>{{ entity.address }}</td>          
            <td>{{ entity.rooms }}</td>
            <td>{{ entity.floor }}/{{ entity.floors }}</td>
            <td><a href="#" title="{{ entity.buildingtype.name }}">{{ entity.buildingtype.abbr }}</a></td>           
            <td>{{ entity.sl }}</td>
            <td>{{ entity.sk }}</td>
            <td><a href="#" title="{{ entity.bathunittype.name }}">{{ entity.bathunittype.abbr }}</a></td>
            <td>{{ entity.nr }}/{{ entity.nt }}/{{ entity.nn }}</td>
            <td>{{ entity.price }}</td>            
            <td>{{ entity.sdesc }}</td>
            <td>
                <a href="{{ path('admin_room_show', { 'id': entity.id }) }}" class="icon-check" title="Показать"></a> | 
                <a href="{{ path('admin_room_edit', { 'id': entity.id }) }}" class="icon-edit" title="Редактировать"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<a href="{{ path('admin_room_new') }}" rel="tooltip" title="first tooltip"> Добавить комнату</a>

</div>

{% endblock %}
