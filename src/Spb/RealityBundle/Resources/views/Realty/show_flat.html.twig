{% extends 'SpbRealityBundle:Realty:show.html.twig' %}

{% block rtypebody %}        
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th><abbr title="Объекта">Объект</abbr></th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Операция</th>
                    <td>{{ entity.operation }}</td>
                </tr>
                <tr>
                    <th>Стадия</th>
                    <td>{{ entity.buildingstage }}</td>
                </tr>
                <tr>
                    <th>Район</th>
                    <td>{{ entity.district }}</td>
                </tr>
                <tr>
                    <th>Адрес</th>
                    <td>{{ entity.address }}</td>
                </tr>
                
                <tr>
                    <th>Комнат</th>
                    <td>{{ entity.rooms }}</td>
                </tr>
                <tr>
                    <th>Этаж</th>
                    <td>{{ entity.floor }}/{{ entity.floors }}</td>
                </tr>
                <tr>
                    <th>Материал</th>
                    <td>{{ entity.buildingtype }}</td>
                </tr>
                <tr>
                    <th><abbr title="Общая площадь">S общая</abbr></th>
                    <td>{{ entity.s }} м<sup>2</sup></td>
                </tr>
                <tr>
                    <th><abbr title="Жилая площадь">S жилая</abbr></th>
                    <td>{{ entity.sl }} м<sup>2</sup></td>
                </tr>
                <tr>
                    <th>Кухня</th>
                    <td>{{ entity.sk }} м<sup>2</sup></td>
                </tr>
                <tr>
                    <th>Санузел</th>
                    <td>{{ entity.bathunittype }}</td>
                </tr>
                <tr>
                    <th>Цена</th>
                    <td>{{ entity.price }} руб.</td>
                </tr>
                <tr>
                    <th><abbr title="Дополнительные сведения">Доп.</abbr></th>
                    <td>{{ entity.sdesc }}</td>
                </tr>
            </tbody>
        </table>
{% endblock %}
