{% extends 'SpbRealityBundle:Realty:show.html.twig' %}

{% block rtypebody %}        
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Номер объекта</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Тип сделки</th>
                    <td>{{ entity.operation }}</td>
                </tr>
                <tr>
                    <th>Район</th>
                    <td>{{ entity.district }}</td>
                </tr>
                <tr>
                    <th>Адрес</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>Площадь</th>
                    <td>{{ entity.s }}</td>
                </tr>
                <tr>
                    <th>Всего этажей</th>
                    <td>{{ entity.floors }}</td>
                </tr>
                <tr>
                    <th><abbr tittle="Состояние помещения">Сост.</abbr></th>
                    <td>{{ entity.statetype }}</td>
                </tr>
                <tr>
                    <th>Площадь участка(га)</th>
                    <td>{{ entity.area }}</td>
                </tr>
                <tr>
                    <th>Цена</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Доп.сведения</th>
                    <td>{{ entity.sdesc }}</td>
                </tr>
                <tr>
                    <th>Описание</th>
                    <td>{{ entity.ldesc }}</td>
                </tr>
            </tbody>
        </table>

{% endblock %}
