{% extends 'SpbRealityBundle:Realty:show.html.twig' %}

{% block rtypebody %}        
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th><abbr title="Номер объекта">Объект</abbr></th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Операция</th>
                    <td>{{ entity.operation }}</td>
                </tr>
                <tr>
                    <th>Район</th>
                    <td>{{ entity.district }}</td>
                </tr>
                <tr>
                    <th>Адрес</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>Площадь</th>
                    <td>{{ entity.s }} м<sup>2</sup></td>
                </tr>
                <tr>
                    <th>Этажей</th>
                    <td>{{ entity.floors }}</td>
                </tr>
                <tr>
                    <th><abbr title="Состояние помещения">Состояние</abbr></th>
                    <td>{{ entity.statetype }}</td>
                </tr>
                <tr>
                    <th><abbr title="Площадь участка(га)">Участок</abbr></th>
                    <td>{{ entity.area }} га</td>
                </tr>
                <tr>
                    <th>Цена</th>
                    <td>{{ entity.price }} руб.</td>
                </tr>
                <tr>
                    <th><abbr title="Дополнительные сведения">Доп.</abbr></th>
                    <td>{{ entity.sdesc }}</td>
                </tr>
            </tbody>
        </table>

{% endblock %}
