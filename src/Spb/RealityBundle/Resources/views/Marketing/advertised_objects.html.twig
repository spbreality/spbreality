<div class="row-fluid">
    <ul class="thumbnails">
{% set counter = 6 %}
{% for entity in entities if counter > 0 %}
        <li class="span4">            
            <a href="{{ path('spb_realty_show' , { 'rtype': entity.realtytype, 'id':entity.id }) }}" class="thumbnail">            
    {% if entity.documents.first.webpath is defined %}
         {% set img = entity.documents.first.webpath %}
    {% else %}
         {% set img = asset('bundles/spbreality/img/no-image.png')%}
    {% endif %}
                <img src="{{img | apply_filter('thumb400x260') }}" alt="Фото объекта">                
                <p>
                    <h5>{{entity.name("single", "camel")}} {{entity.price}} руб.</h5>
                    {{entity.sdesc}}
                    <h6>{{entity.address}}</h6>
                    <h6>{{entity.district}}</h6>
                </p>                
            </a>            
        </li>
    {% set counter = counter - 1 %}
    {% if counter == 3 and entities|length > 3 %}
    </ul>
</div>
<div class="row-fluid">
    <ul class="thumbnails">
    {% endif %}
{% endfor %}
    </ul>
</div>
