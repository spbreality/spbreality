{% extends '::base_hero.html.twig' %}

{% block body %}

<div class="container">
<h1>Flat list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rooms</th>
            <th>Price</th>
            <th>Floor</th>
            <th>Floors</th>
            <th>S</th>
            <th>Sl</th>
            <th>Sk</th>
            <th>T1or2</th>
            <th>Btype</th>
            <th>Otype</th>
            <th>Sdesc</th>
            <th>Ldesc</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_flat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.rooms }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.floor }}</td>
            <td>{{ entity.floors }}</td>
            <td>{{ entity.s }}</td>
            <td>{{ entity.sl }}</td>
            <td>{{ entity.sk }}</td>
            <td>{{ entity.t1or2 }}</td>
            <td>{{ entity.btype }}</td>
            <td>{{ entity.otype }}</td>
            <td>{{ entity.sdesc }}</td>
            <td>{{ entity.ldesc }}</td>
            <td>{{ entity.address }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_flat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_flat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_flat_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

</div>

{% endblock %}