{% extends '::base_hero.html.twig' %}

{% block body %}
<div class="container">

    <ul class="breadcrumb">
        <li>
            <a href="#">Жилая недвижимость</a><span class="divider">/</span>
        </li>
        <li>
            <a href="{{ path('admin_flat') }}">Квартиры</a><span class="divider">/</span>
        </li>
        <li class="active">
            Полная информация об объекте
        </li>
    </ul>

    <div class="row">
      <div class="span6">    
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Номер объекта</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Тип сделки</th>
                    <td>{{ entity.operation.name }}</td>
                </tr>
                <tr>
                    <th>Тип дома</th>
                    <td>{{ entity.buildingstage.name }}</td>
                </tr>
                <tr>
                    <th>Район</th>
                    <td>{{ entity.district }}</td>
                </tr>
                <tr>
                    <th>Адрес</th>
                    <td>{{ entity.address }}</td>
                </tr>
                
                <tr>
                    <th>Количество комнат</th>
                    <td>{{ entity.rooms }}</td>
                </tr>
                <tr>
                    <th>Этажность</th>
                    <td>{{ entity.floor }}/{{ entity.floors }}</td>
                </tr>
                <tr>
                    <th>Тип/материал дома</th>
                    <td>{{ entity.buildingtype }}</td>
                </tr>
                <tr>
                    <th>Общая площадь</th>
                    <td>{{ entity.s }}</td>
                </tr>
                <tr>
                    <th>Жилая площадь</th>
                    <td>{{ entity.sl }}</td>
                </tr>
                <tr>
                    <th>Площадь кухни</th>
                    <td>{{ entity.sk }}</td>
                </tr>
                <tr>
                    <th>Цена</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Доп.сведения</th>
                    <td>{{ entity.sdesc }}</td>
                </tr>
                <tr>
                    <th>Описание</th>
                    <td>{{ entity.ldesc }}</td>
                </tr>
                <tr>
                    <th>
                        &nbsp;
                    </th>
                    <td>
                        <a href="{{ path('admin_flat_edit', { 'id': entity.id }) }}" class="icon-edit"></a>        
                        <a href="{{ path('admin_flat_edit', { 'id': entity.id }) }}"> Редактировать объект</a>
                    </td>
                </tr>
            </tbody>
        </table>
              
        <form action="{{ path('admin_flat_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button class="btn btn-mini btn-danger" type="submit">Удалить</button>
        </form>                        
              
             
                          
      </div>
        <div class="span6"></div>
      </div>
            


</div>
{% endblock %}